<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header'); %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster+Two:ital@1&family=Offside&display=swap" rel="stylesheet"> 
    <title>StoryBoard</title>
</head>
<body class="viewstory__body">
    <%- include('partials/nav.ejs') %> 
    <div class="container viewstory__container">
        <div class="viewstory__storyheader">
            <div>
                <h3 class="viewstory__storytitle"><%= story.title %> </h3>
                <h5 class="viewstory__storytitle">- <%= story.user.displayName %> </h5>
            </div>
            <div class="table-icons">
                    <div class="edit-btns <%= story.editIcon %> ">
                        <a href="/stories/edit/<%= story._id %>" ><button type="button" class="submit-button"><i class="fas fa-edit"></i></button></a>
                        <form id="myform" method="POST" action="/stories/<%= story._id %>?_method=DELETE"><button type="button" class="submit-button" onclick="handleDelete()"><i class="fa-solid fa-trash-can delete-icon"></i></button>
                    </div>
                    <a href="/stories"><button type="button" class="submit-button"><i class="fa fa-arrow-left" aria-hidden="true"></i></button></a>
                <!-- <a href="/stories" class="waves-effect waves-light btn"><i class="large material-icons">arrow_back</i></a> -->
            </div>
        </div>
        <div class="viewstory__storybody"><%- story.body %> </div>
    </div>
    <script>
        const handleDelete= () => {
            if (confirm("Are you sure you want to delete this?")){
                let form = event.currentTarget.parentNode
                form.submit()
            }
            let button = event.currentTarget
            button.style.backgroundColor="DodgerBlue"
            return false
        }
    </script> 
    <%- include('partials/footer.ejs') %> 
</body>
</html>