<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header'); %>

    <title>Author</title>
</head>
<body class="viewstory__body">
    <%- include('../partials/nav.ejs') %> 
    <div class="container">
        <div class="userpage__top-panel">
            <% if (author.image) { %>
                <div class="userpage__image">
                    <img src="<%= author.image %> " alt="<%= author.displaName %> ">
                </div>
            <% } %>

            <div class="header-box">
                <div>
                    <h3><%= author.firstName%> <%= author.lastName %></h3>
                </div>
                <div class="navbtns">
                    <a href="/dashboard" class="waves-effect waves-purple btn extra-button">Dashboard</a>
                    <a href="/stories" class="waves-effect waves-purple btn extra-button">Public Stories</a>
                </div>
            </div>
        </div>
        <div class="stories">
            <div class="row">
                <div class="col s12">
                    <% for( let index = 0; index < author.stories.length; index++ ) { %>
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                              <span class="card-title"> <%= author.stories[index].title %> </span>
                              <p><%= author.stories[index].createdAt %></p>
                            </div>
                          </div>
                    
                    <% } %>
                </div>
              </div>

        </div>

    </div>
    <%- include('../partials/footer.ejs') %> 
</body>
</html>