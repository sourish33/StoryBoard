<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header'); %>
    <title>Login</title>
</head>
<body>
    <%- include('partials/nav-login.ejs') %> 
    <div class="container login-container">
        <div class="card" id="home">
            <div class="card-content">
                <h3><i class="fas fa-book-reader"></i>   StoryBoard</h3>
                <div class="section">
                    <p class="lead">Create and share short stories</p>
                </div>
                <div class="divider"></div>
                <a href="/auth/google" class="btn blue darken-1">
                    <i class="fab fa-google left"></i> Log in with Google
                </a>
                <div class="divider"></div>
                <a class="btn blue darken-1" onclick="onlyLogin()">
                    <i class="fa fa-sign-in left" aria-hidden="true"></i> Log in with email
                </a>
                <div class="divider"></div>
                <a class="btn blue darken-1" onclick="onlyRegister()">
                    Register
                </a>
            </div>
            <% if (messages) { %> 
                <div class="login__animated">
                    Messages found.<%= messages %> 
                </div>
            <% } %> 
        </div>
        <div class="card" id="register">
            <!-- <div class="card-header"> <h3>Register</h3></div> -->
            <div class="card-content">
                <h3><i class="fas fa-book-reader"></i>   StoryBoard</h3>
                <div class="divider"></div>
                <form class="col s12" method="POST" action="/auth/register">
                    <div class="row">
                      <div class="input-field col s6">
                        <input id="firstName" name = "firstName" type="text" class="validate">
                        <label for="firstName">First Name</label>
                      </div>
                      <div class="input-field col s6">
                        <input id="lastName" type="text" name="lastName" class="validate">
                        <label for="lastName">Last Name</label>
                      </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                          <input id="email" name="email" type="email" class="validate">
                          <label for="email">Email</label>
                        </div>
                      </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate">
                        <label for="password">Password</label>
                      </div>
                    </div>
                    <div class="row">
                        <a class="btn blue darken-1" onclick="registrationSubmit()">
                            Register
                        </a>
                    </div>
                    <div class="login__others">
                        <a href="/login" >Home</a>
                        <a class="login__fauxlink" onclick="onlyLogin()">Login with email</a>
                    </div>
                  </form>
            </div>
        </div>
        <div class="card" id="login">
                <!-- <div class="card-header"> <h3>Login</h3></div> -->
                <div class="card-content">
                    <h3><i class="fas fa-book-reader"></i>   StoryBoard</h3>
                    <div class="divider"></div>
                    <form class="col s12" action="/auth/login" method="POST">
                        <div class="row">
                            <div class="input-field col s12">
                              <input id="email" type="email">
                              <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s12">
                            <input id="password" type="password">
                            <label for="password">Password</label>
                          </div>
                        </div>
                        <div class="row">
                            <a href="#" class="btn-large blue darken-1" onclick="registrationSubmit()">
                                Login
                            </a>
                        </div>
                        <div class="login__others">
                            <a href="/login" >Home</a>
                            <a class="login__fauxlink" onclick="onlyRegister()">Register</a>
                        </div>
                        
                        <!-- <input type="file" id="myFile" name="filename">
                        <input type="submit"> -->
                      </form>
                </div>
        </div>
        
    </div>
    <%- include('partials/footer.ejs') %> 
    <script>
        const home = document.getElementById("home")
        const register = document.getElementById("register")
        const login = document.getElementById("login")

        const onlyHome = () =>{
            home.style.display="block"
            register.style.display="none"
            login.style.display="none"
        }

        const onlyRegister = () =>{
            home.style.display="none"
            register.style.display="block"
            login.style.display="none"
        }
        const onlyLogin = () =>{
            home.style.display="none"
            register.style.display="none"
            login.style.display="block"
        }

        const registrationSubmit = () =>{
            const form = event.currentTarget.parentNode.parentNode
            form.submit()
        }
        window.onload = onlyHome
    </script>

</body>
</html>
